<div id="<%= dom_id product %>" class="flex flex-row my-4 p-4 items-center bg-white rounded-sm border border-slate-200">
  <%= image_tag(product.image_url, class: 'w-40') %>
  <div class="flex flex-col px-4 w-full self-start">
    <p class="my-5 font-semibold">
      <%= product.title %>
    </p>

    <p class="my-5">
      <%= truncate(strip_tags(product.description), length: 100) %>
    </p>
  </div>

  <div class="flex flex-col justify-center gap-2 p-4">
    <p>
      <%= link_to "Show", product, class: "w-full text-center ml-2 rounded-lg py-3 px-5 bg-green-500 text-white inline-block font-medium" %>
    </p>
    <p>
      <%= link_to "Edit", edit_product_path(product), class: "w-full text-center ml-2 rounded-lg py-3 px-5 bg-blue-500 text-white inline-block font-medium" %>
    </p>
    <p>
      <%= link_to "Destroy", product, class: "w-full text-center ml-2 rounded-lg py-3 px-5 bg-red-500 text-white inline-block font-medium", data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </p>
  </div>

</div>
