<div>
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Products" %>

  <div class="flex justify-between items-start m-1">
    <h1 class="font-bold text-4xl">Products</h1>
    <%= link_to "New product", new_product_path, class: "rounded-lg py-2 px-3 bg-blue-500 text-white block font-medium" %>
  </div>
  <hr/>
  <div id="products" class="min-w-full">
    <% cache @products do %>
      <% @products.each do |product| %>
        <% cache product do %>
          <%= render product %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
