<%= turbo_frame_tag(dom_id(product)) do %>
  <div class="flex flex-row my-4 p-4 items-center bg-white rounded-sm border border-slate-200 hover:shadow-md transition-all">
    <%= image_tag(product.image_url, class: 'w-40') %>
    <div class="flex flex-col px-4 w-full self-start">
      <p class="my-5 font-semibold">
        <%= product.title %>
      </p>
      <p class="my-5">
        <%= sanitize(product.description) %>
      </p>
      <p class="price my-5">
        <%= number_to_currency(product.price) %>
      </p>
    </div>
    <%= button_to 'Add to Cart', line_items_path(product_id: product), form_class: "inline self-end", class: "user-button-primary" %>
  </div>
<% end %>