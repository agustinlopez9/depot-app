<div>
  <%= render 'notice' %>
  <h1 class="font-bold text-4xl m-1">Store</h1>
  <hr>
  <div id="products" class="min-w-full">
    <%= turbo_stream_from 'products' %>
    <% cache @products do %>
      <% @products.each do |product| %>
        <% cache product do %>
          <%= render partial: "product", object: product %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
